---
import Layout from "../layouts/Layout.astro";
import TestHero from "../components/TestHero.astro";
import Work from "../components/Work.astro";
import Contact from "../components/Contact.astro";
---

<Layout title="Will Carter Portfolio">
  <main class="flex flex-col bg-offw text-dark dark:bg-dark dark:text-offw">
    <TestHero />
    <div class="container-lg flex justify-center max-w-5xl mx-auto z-[3]">
      <div class="w-full min-w-[100vw] contain:min-w-[1024px] px-4">
        <Work />
        <Contact />
      </div>
    </div>
  </main>
</Layout>
