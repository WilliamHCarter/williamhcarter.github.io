---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Work from "../components/Work.astro";
import Contact from "../components/Contact.astro";
---

<Layout title="Will Carter Portfolio">
  <main class="flex flex-col bg-offw text-dark dark:bg-dark dark:text-offw">
    <Hero />
    <div class="container-lg flex justify-center max-w-5xl mx-auto z-[3]">
      <div class="w-full min-w-[100vw] contain:min-w-[1024px] px-4 mt-10">
        <Work />
        <Contact />
      </div>
    </div>
  </main>
</Layout>

<style>
  body {
    background-color: red;
  }
</style>