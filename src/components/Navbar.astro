---
import MobileMenu from "../components/MobileMenu.jsx";
import Logo from "../components/Logo.astro";
---

<div
  class="flex justify-between items-center max-w-7xl mx-auto px-2 py-4 backdrop-blur-sm bg-[#ffffff60]"
>
  <Logo />
  <nav class="navlinks hidden pc:flex justify-end items-center gap-8 mr-[2vw]">
    <a
      class="text-dark font-semibold text-center hover:underline underline-offset-4 hover:text-teal no-underline m-0"
      href="#"
    >
      Work
    </a>
    <a
      class="text-dark font-semibold text-center hover:underline underline-offset-4 hover:text-teal no-underline m-0"
      href="/WillCarterResume.pdf"
    >
      Resume
    </a>
    <a
      class="text-dark font-semibold text-center hover:underline underline-offset-4 hover:text-teal no-underline m-0"
      href="#testm"
    >
      Contact
    </a>
    <div
      class="flex items-center px-4 py-2 bg-g hover:bg-ghl rounded-md transition-all duration-150 ease relative"
    >
      <img class="inline-block w-4 mr-2 filter grayscale contrast-[8500]" src="/github.svg" alt="gh-icon" />
      <a class="absolute inset-0 z-neg" href="https://github.com/WilliamHCarter"></a>
      <p class="relative text-dark text-base font-semibold hover:underline underline-offset-4">
        Github
      </p>
    </div>
  </nav>
  <astro-fragment class="pc:hidden">
    <MobileMenu client:load />
  </astro-fragment>
</div>
<style>
  h3 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    text-align: center;
  }
  @media only screen and (max-width: 700px) {
    h3 {
      font-size: 1.5rem;
    }
  }
</style>
