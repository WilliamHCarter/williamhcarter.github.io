<div class="hero-section flex mt-20 w-full">
  <!-- Blurred Background Image -->
  <div class="bg-blur backdrop-blur-xl bg-[ffffff60]"></div>

  <!-- Floating Orbs -->
  <div class="orb orb1"></div>
  <div class="orb orb2"></div>

  <!-- Content -->
  <div class="z-[3] flex flex-col items-center justify-center h-full w-full animate-intro-100 mt-5 delay-def">
    <h2 class="text-5xl font-semibold delay-def">Will Carter</h2>
    <p class="text-xl mt-1">Developer | Designer | Creative</p>
  </div>
</div>

<style>
  /* Basic styles for the hero section */
  .hero-section {
    position: relative;
    height: 500px;
    overflow: hidden;
  }

  /* Blurred Background */
  .bg-blur {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  /* Floating Orbs */
  .orb {
    position: absolute;
    width: 400px;
    height: 400px;
    border-radius: 50%;
    z-index: 1;
  }

  .orb1 {
    top: 10%;
    left: -10%;
    background-color: rgb(82, 70, 255);
  }

  .orb2 {
    top: 30%;
    left: 70%;
    background-color: rgb(62, 226, 196);
    animation: drift2 12s infinite alternate;
  }

  @keyframes drift2 {
    from {
      transform: translate(0, 0);
    }
    to {
      transform: translate(-150px, 200px);
    }
  }
</style>

<script>
  const orb1 = document.querySelector(".orb1") as HTMLElement;

  let x = 0;
  let y = 0;
  let t = 0;
  let multiplier1 = 1;
  let multiplier2 = 1.5;

  function moveOrb() {
    // Randomly change multipliers occasionally
    if (Math.random() < 0.01) {
      // 1% chance to change multipliers
      multiplier1 = 1 + Math.random();
      multiplier2 = 1 + Math.random();
    }

    // Ensure orb remains within boundaries
    const maxX = window.innerWidth - orb1.clientWidth;
    if (x < 0) x = 0;
    if (x > maxX) x = maxX;
    const maxY = window.innerHeight - orb1.clientHeight;
    if (y < 0) y = 0;
    if (y > maxY) y = maxY;
    orb1.style.transform = `translate(${x}px, ${y}px)`;

    x += Math.sin(t * multiplier1) * 5;
    y += Math.cos(t * multiplier2) * 5;

    orb1.style.transform = `translate(${x}px, ${y}px)`;

    t += 0.02;
    requestAnimationFrame(moveOrb);
  }

  requestAnimationFrame(moveOrb);
</script>
